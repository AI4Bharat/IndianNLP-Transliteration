{
    lang:               hindi,
    
    train_data_json:    data/NEWS2018_JSON/EnHi_train.json,
    test_data_json:     data/NEWS2018_JSON/EnHi_dev.json,
    
    hyperparams: {
        # Training parameters
        batch_size:         32,
        optimizer:          Adam,
        lr:                 0.001,
        epochs:             120,
        teacher_epochs:     80,
        teacher_force_prob: 0.5,
        early_stop_after:   15,
        
        # Directories and transfer learning
        ckpt_dir:           hypotheses/2E3D-bidir/,
        # load_ckpt_epoch:    50,
        
        # Inference parameters
        infer_batch_size:   64,
        
    },

    model: {
        type:               seq2seq,
        rnn_type:           gru,
        
        encoder: {
            embed_size:     32,
            hidden_units:   128,
            num_layers:     2,
            bidirectional:  true,
        },
        
        decoder: {
            embed_size:     128,
            hidden_units:   256,
            num_layers:     3,
            
            max_steps:      25,
        }
    },
    
}