{
    lang:               hindi,
    
    train_data_json:    data/NEWS2018_JSON/EnHi_train.json,
    test_data_json:     data/NEWS2018_JSON/EnHi_dev.json,
    
    hyperparams: {
        # Training parameters
        batch_size:         32,
        optimizer:          Adam,
        lr:                 0.001,
        epochs:             120,
        teacher_epochs:     80,
        teacher_force_prob: 0.5,
        
        # Directories and transfer learning
        ckpt_dir:           hypotheses,
        load_ckpt_epoch:    50,
        
        # Inference parameters
        infer_batch_size:   64,
        
    },

    model: {
        type:               seq2seq,
        rnn_type:           gru,
        
        # Encoder parameters
        enc_hidden_units:   256,
        enc_embed_size:     64,
        
        # Decoder parameters
        dec_hidden_units:   256,
        dec_embed_size:     128,
        
        max_decode_steps:   25,
    },
    
}